#!/bin/sh
# set -x
rm -rf ./config.cache

if [ x"$1" = x ]; then
  name=`uname -n`
else
  if [ x"$1" = x"--" ]; then
    name=`uname -n`
  else
    name="$1"
  fi
  shift
fi

if [ x"$CFLAGS" = x ]; then
  CFLAGS="-g"
  export CFLAGS
fi
if [ x"$LDFLAGS" = x ]; then
  LDFLAGS="-g"
  export LDFLAGS
fi

GCCFLAGS="-W -Wall -Wno-implicit-int -O2"
STRICTFLAGS="-pedantic -Wall -Wpointer-arith -Wcast-align -Wstrict-prototypes -Wredundant-decls -Wnested-externs -Wconversion -Wno-implicit-int"
CF="--config-cache"

echo "configure for: " $name

case $name in
  app|js9app)
  ./configure 	$CF							\
		--with-helper="socket.io"				\
		--with-cfitsio=$HOME					\
		--prefix=$HOME/js9app/src				\
		--with-webdir=$HOME/js9app/src				\
		CC=gcc CFLAGS="$CFLAGS $GCCFLAGS" $*
  ;;

  baba|baba.local|baba-nodejs)
  ./configure 	$CF							\
		--with-helper="socket.io"				\
		--prefix=$HOME						\
		--with-webdir=$HOME/Sites/js9				\
		--with-cfitsio=$HOME					\
		--with-saodir=$HOME/Sites				\
		CC=gcc CFLAGS="$CFLAGS $GCCFLAGS" $*
  ;;

  engle)
  ./configure 	$CF							\
		--with-helper="socket.io"				\
		--prefix=$HOME						\
		--with-webdir=$HOME/Sites/js9				\
		--with-cfitsio						\
		--with-saodir=$HOME/Sites				\
		CC=gcc CFLAGS="$CFLAGS $GCCFLAGS" $*
  ;;

  baba-cgi)
  ./configure 	$CF							\
		--with-helper="get"					\
		--prefix=$HOME						\
		--with-webdir=$HOME/Sites/js9				\
		--with-cfitsio=$HOME					\
		--with-cgidir=$HOME/Sites/cgi-bin			\
		--with-cgiurl="~eric/cgi-bin"				\
		--with-cgixpath=$HOME/bin				\
		--with-saodir=$HOME/Sites				\
		CC=gcc CFLAGS="$CFLAGS $GCCFLAGS" $*
  ;;

  baba-none)
  ./configure 	$CF --with-webdir=$HOME/Sites/js9			\
		CC=gcc CFLAGS="$CFLAGS $GCCFLAGS" $*
  ;;

  baba-funtools)
  ./configure 	$CF							\
		--with-helper="socket.io"				\
		--prefix=$HOME						\
		--with-webdir=$HOME/Sites/js9				\
		--with-funtools=$HOME					\
		--with-saodir=$HOME/Sites				\
		CC=gcc CFLAGS="$CFLAGS $GCCFLAGS" $*
  ;;

  bokhara|bokhara.cfa*|bokhara-nodejs)
  ./configure 	$CF							\
		--with-helper="socket.io"				\
		--prefix=$HOME						\
		--with-webdir=$HOME/Sites/js9				\
		--with-cfitsio=$HOME					\
		--with-saodir=$HOME/Sites				\
		CC=gcc CFLAGS="$CFLAGS $GCCFLAGS" $*
  ;;

  bokhara-cgi)
  BASE=/home/eric/Sites
  ./configure 	$CF							\
		--with-helper="post"					\
		--prefix=$HOME						\
		--with-cfitsio=$HOME					\
		--with-webdir=$BASE/htdocs/js9				\
		--with-cgidir=$BASE/cgi-bin/js9				\
		--with-cgiurl=cgi-bin/js9				\
		--with-cgixpath=/soft/saord/bin				\
		CC=gcc CFLAGS="$CFLAGS $GCCFLAGS"			\
		$*
  ;;

  smartx*|js9*)
  BASE=/js9
  ./configure 	$CF							\
		--with-helper="nodejs"					\
		--prefix=$BASE						\
		--with-cfitsio=$BASE					\
		--with-webdir=$BASE/www/js9				\
		--with-saodir=$BASE/www					\
		CC=gcc CFLAGS="$CFLAGS $GCCFLAGS"			\
		$*
  ;;


  tmp)
  ./configure 	$CF						\
	--with-helper="socket.io"				\
	--prefix=$HOME/tmp/js9					\
	--with-webdir=$HOME/tmp/js9/Sites/js9			\
	--with-cfitsio=$HOME					\
	--with-saodir=$HOME/tmp/js9/Sites			\
	CC=gcc CFLAGS="$CFLAGS $GCCFLAGS" $*
  ;;

  *)
  ./configure 	$CF $*
  ;;

esac
